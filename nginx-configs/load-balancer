# Определяем upstream с 3 backend-серверами Apache
upstream apache_backend {
    server 127.0.0.1:8080;
    server 127.0.0.1:8081;
    server 127.0.0.1:8082;
}

server {
    listen 80;
    listen [::]:80;
    
    server_name _;
    
    # Логи
    access_log /var/log/nginx/load-balancer-access.log;
    error_log /var/log/nginx/load-balancer-error.log;
    
    # Перенаправление на upstream
    location / {
        proxy_pass http://apache_backend;
        
        # Заголовки для корректной передачи информации
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

